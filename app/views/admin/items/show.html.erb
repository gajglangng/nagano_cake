<div class="container">
  <div class="row show-item-box">
    
    <h3 class="show-title">商品詳細</h3>
    <div class="col-sm-5 item-image-show">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "450x300", format: 'jpeg' %>
      <% else %>
        <%= image_tag 'no_image', size: "450x300" %>
      <% end %>
    </div>
    
    <div class="col-sm-6 item-subscribe">
      <table class="table table-hover table-inverse">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @genre.name %></td>
        </tr>
        <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= ((@item.price * 1.1).round(2)).ceil.to_s(:delimited)  %>（<%= @item.price.to_s(:delimited) %>）円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
              販売中
            <% else %>
              販売停止中
            <% end %>
          </td>
        </tr>
      </table>
      <div id = "item-action-btn">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-default btn-lg btn-info " %>
    </div>
    </div>
    
  </div>
</div>