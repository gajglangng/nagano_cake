<h3 class="order-admin-title-box"><span class="order-admin-title">注文履歴一覧</span></h3>
<div class="container">
  <div class="row-sm-12 order-info-table">
    
    <div class="col-sm-12 table-responsive">
    <!--注文履歴一覧テーブル-->
      <table class="table table-hover">
        <thead>
          <tr class="success">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y/%m/%d　%H:%M"), admin_order_path(order.id)  %></td>
              <td><%= order.customer.last_name %> <%= order.customer.first_name %> 様</td>
              <% count = 0 %>
              <% order.order_details.each do |order_detail| %>
               <% count += order_detail.amount %>
              <% end %>
              <td><%= count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!--ページネーション-->
    <div class="pagenation"><%= paginate @orders %></div>
    </div>
    
  </div>
</div>