<div class="container">
  <div class="row">
    
    <% if @customer.errors.any? %>
      <div class="alert alert-position">
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="title-area-edit">
      <h3 class="mypage-edit-title">会員情報編集</h3>
    </div>
    
    <div class="col-md-10 col-md-offset-2">
      <%= form_with model: @customer, url: update_customers_path, method: :patch, local: true do |f| %>
        
        <form class="form-horizontal">
          <div class="form-group">
            <label for="inputName3" class="col-sm-3 control-label"><%= f.label :名前 %></label>
              <div class="col-sm-3">
                <%= f.label :"(姓)" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control", id:"inputName3" %>
              </div>
              <div class="col-sm-3">
                <%= f.label :"(名)" %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control", id:"inputName3" %>
              </div>
          </div>
          <br></br><br></br>
          <div class="form-group">
            <label for="inputName3" class="col-sm-3 control-label"><%= f.label :フリガナ %></label>
              <div class="col-sm-3">
                <%= f.label :"(セイ)" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control", id:"inputName3" %>
              </div>
              <div class="col-sm-3">
                <%= f.label :"(メイ)" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control", id:"inputName3" %>
              </div>
          </div>
          <br></br><br></br>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-3 control-label"><%= f.label :メールアドレス %></label>
              <div class="col-sm-5">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id:"inputEmail3" %>
              </div>
          </div>
          <br></br><br>
          <div class="form-group">
            <label for="inputPostal_code3" class="col-sm-3 control-label"><%= f.label :"郵便番号(ハイフンなし)" %></label>
              <div class="col-sm-5">
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control", id:"inputPostalcode3" %>
              </div>
          </div>
          <br></br><br>
          <div class="form-group">
            <label for="inputAddress3" class="col-sm-3 control-label"><%= f.label :住所 %></label>
              <div class="col-sm-5">
                <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control", id:"inputAddress3" %>
              </div>
          </div>
          <br></br><br>
          <div class="form-group">
            <label for="inputTelephonenumber3" class="col-sm-3 control-label"><%= f.label :電話番号 %></label>
              <div class="col-sm-5">
                <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control", id:"inputTelephonenumber3" %>
              </div>
          </div>
          <br></br><br></br>
          
          <div class="form-group">
            <div class="col-md-offset-1 col-md-6 customer-info-button">
              <%= f.submit "編集内容を保存", class:"btn btn-info btn-lg" %>
              <%= link_to "退会する", unsubscribe_customers_path, class:"btn btn-danger pull-right btn-lg" %>
            </div>
          </div>
        </form>
      <% end %>
    </div>  
  </div>
</div>