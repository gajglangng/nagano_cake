<div class="title-area-order">
  <h3><span class="order-info-title">注文履歴詳細</span></h3>
</div>

<div class="container-fluid">
  <div class="row-sm-12 order-history-show">

    <div class="col-sm-6">
    <!--注文情報テーブル-->
      <p class="info-title">注文情報</p>
      <table class="table table-bordered">
        <tr>
          <th class="success col-xs-3">注文日</th>
          <td><%= l @order.created_at %></td>
        </tr>
        <tr>
          <th class="success">配送先</th>
          <td>〒<%= @order.postal_code %></br>
                <%= @order.address %></br>
                <%= @order.name %></td>
        </tr>
        <tr>
          <th class="success">支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
      </table>
    </div>

    <div class="col-sm-3">
    <!--請求情報テーブル-->
      <p class="info-title">請求情報</p>
      <table class="table table-bordered">
        <tr>
          <th class="success col-xs-5">商品合計</th>
          <% (@order.total_payment - @order.postage).to_s(:delimited) %>
        </tr>
        <tr>
          <th class="success">配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th class="success">ご請求額</th>
         <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>

    <div class="col-sm-8">
    <!--注文内容テーブル-->
      <p class="info-title">注文内容</p>
      <table class="table table-bordered">
      	<thead>
      		<tr class="success">
      			<th class="col-xs-6">商品</th>
      			<th class="col-xs-2">単価（税込）</th>
      			<th class="col-xs-2">個数</th>
      			<th class="col-xs-2">小計</th>
      		</tr>
      	</thead>
      	<tbody>
      	  <% @order_details.each do |order_detail| %>
      		<tr>
      			<td><%= order_detail.item.name %></td>
      			<td><%= order_detail.price.to_s(:delimited) %>円</td>
      			<td><%= order_detail.amount %>個</td>
      			<td><%= (order_detail.price * order_detail.amount).to_s(:delimited) %>円</td>
      		</tr>
      		<% end %>
      	</tbody>
      </table>
    </div>

  </div>
</div>