  <div class="area-order">
    <h3><span class="order-info-title">注文履歴一覧</span></h3>
  </div>

<div class="container-fluid">
  <div class="row-sm-12 order-history-index">
    <div class="col-sm-12">
   <!--注文履歴テーブル-->
      <table class="table table-bordered">
      	<thead>      		
      	  <tr class="success">
      			<th>注文日</th>
      			<th>配送先</th>
      			<th>注文商品</th>
      			<th>支払金額</th>
      			<th>注文詳細</th>
      		</tr>
      	</thead>

      	<tbody>
      	  <% @orders.each do |order| %>
      		 <tr>
      			<td><%= order.created_at.strftime("%Y/%m/%d") %></td>
      			<td>〒<%= order.postal_code %><br>
      			      <%= order.address %><br>
      			      <%= order.name %></td>
      			<td>
      			  <% order.order_details.each do |order_detail| %>
      			    <%= order_detail.item.name %></br>
              <% end %>
            </td>
      		  <td><%= @total_payment %>円</td>
      			<td><%= link_to '表示する', order_path(order), class: "btn btn-info" %></td>
      		 </tr>
      	  <% end %>
      	  
      	</tbody>
      </table>
      
      <!--ページネーション-->
      <div class="pagenation"><%= paginate @pages %></div>
      
    </div>
  </div>
</div>