<div class="area-order">
  <h3><span class="order-info-title">注文履歴一覧</span></h3>
</div>

<div class="container-fluid">
  <div class="row-sm-12 order-history-index">

    <div class="col-sm-12">
    <!--注文履歴テーブル-->
      <table class="table table-bordered">
      	<thead>
      		<tr class="success">
      			<th>注文日</th>
      			<th>配送先</th>
      			<th>注文商品</th>
      			<th>支払金額</th>
      			<th>ステータス</th>
      			<th>注文詳細</th>
      		</tr>
      	</thead>

      	<tbody>
      	  <% @orders.each do |order| %>
      		<tr>
              <td class="align-middle"><%= order.created_at.to_s(:datetime_jp) %></td>
              <td class="align-middle"><%= order.postal_code %><br>
                                       <%= order.address %><br>
      			                           <%= order.name %></td>
              
              <td class="align-middle" style="word-break:break-all">
                <% @orders.each do |order_detail| %>
                  <%= link_to order_detail.item.name, item_path(order_detail.item) %><br>
                <% end %>
              </td>
              <td><%= number_with_delimiter(order.total_payment) %>円</td>
      		  	<td><%= order.status %></td>
      			  <td><%= link_to '表示する', order_path(order), class: "btn btn-info" %></td>
            </tr>
      	  <% end %>
      	</tbody>
      </table>
    </div>

  </div>
</div>